@{
    ViewData["Title"] = "Delete Task";
}

@model Tasks

<h2>Delete Confirmation</h2>
<h3>Are you sure you want to delete this task: @Model.TaskName?</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit" class="btn btn-secondary">Delete</button>
    <a asp-controller="Home" asp-action="ViewTasks" class="btn btn-primary">Cancel</a>

    <input type="hidden" asp-for="TaskID" />

</form>
